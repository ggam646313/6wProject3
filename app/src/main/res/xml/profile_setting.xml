    <!-- 카테고리 구분 형태 -->
    <PreferenceCategory android:title="디버깅">

        <SwitchPreference
            android:key="debugging"
            android:title="USB 디버깅"
            android:summary="usb가 연결되었을 경우 디버그 모드 사용"
            android:defaultValue="true"/>

        <!-- 다른 설정값에 따라 활성여부 -->
        <CheckBoxPreference
            android:key="usb_app"
            android:title="USB로 설치된 앱 확인"
            android:summary="usb디버그를 통해 설치된 앱의 목록을 확인합니다."
            android:dependency="debugging"/>

        <!-- dependency : 속성에 설정한 key값에 해다아는 preference의 true, false 여부에 따라 활성화 -->

    </PreferenceCategory>



    <PreferenceScreen
        android:title="네트워크"
        android:summary="네트워크 설정을 합니다.">

        <SwitchPreference
            android:key="roaming"
            android:title="데이터 로밍"
            android:summaryOn="로밍이 되어 있으므로 과급이 있습니다."
            android:summaryOff="로밍시에 로밍서비스 연결"/>


    </PreferenceScreen>

    <!-- PreferenceScreen을 중첩으로 넣으면 새로운 창으로 보여줌 -->
    <!-- 인텐트를 넣으면 새로운 컴포넌트 실행 -->
    <PreferenceScreen
        android:title="이미지보기">

        <intent
            android:targetPackage="com.ggamstudio.ex88preferencefragment"
            android:targetClass="com.ggamstudio.ex88preferencefragment.ImageActivity"/>

    </PreferenceScreen>


</PreferenceScreen>